= form_for @list_item do |f|
  - if @list_item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@list_item.errors.count, "error")} prohibited this list_item from being saved:"
      %ul
        - @list_item.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  -# .field
  -#   = f.label :position
  -#   = f.number_field :position
  .field
    = f.label :list
    = f.collection_select(:list_id, List.all, :id, :title)
  .actions
    = f.submit 'Save'
